# ðŸ”§ ENVIRONMENT VARIABLES - STAGING
# ConfiguraciÃ³n para entorno de staging/testing

# ================================
# APPLICATION SETTINGS
# ================================
NODE_ENV=staging
PORT=3001
LOG_LEVEL=debug

# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_NAME=bikeshop_staging_db
DATABASE_USER=bikeshop_staging_user
DATABASE_PASSWORD=bikeshop_staging_password
DATABASE_HOST=localhost
DATABASE_PORT=5433
DATABASE_URL=postgresql://bikeshop_staging_user:bikeshop_staging_password@localhost:5433/bikeshop_staging_db?schema=public

# ================================
# REDIS CONFIGURATION
# ================================
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=redis_staging_password
REDIS_URL=redis://:redis_staging_password@localhost:6380

# ================================
# JWT CONFIGURATION
# ================================
JWT_SECRET=staging-jwt-secret-different-from-production-minimum-32-chars
JWT_REFRESH_SECRET=staging-refresh-secret-different-from-jwt-minimum-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ================================
# FILE UPLOAD CONFIGURATION
# ================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,application/pdf

# ================================
# CORS CONFIGURATION
# ================================
CORS_ORIGIN=http://localhost:3000,http://staging.bikeshop.local

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# ================================
# STAGING SETTINGS
# ================================
ENABLE_SWAGGER=true
ENABLE_DEBUG_LOGS=true
ENABLE_CORS_DEBUG=true
ENABLE_METRICS=true
