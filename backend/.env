# Copiar este archivo como .env y configurar tus datos reales

# Base de datos PostgreSQL - CONFIGURADO
DATABASE_URL="postgresql://postgres:300000@localhost:5432/bikeshop_erp?schema=public"

# JWT Secret - GENERAR UNO NUEVO Y SEGURO
JWT_SECRET="bikeshop_erp_jwt_secret_2024_super_secure_key_change_in_production"
JWT_EXPIRES_IN="7d"

# Puerto del servidor
PORT=3001

# Entorno
NODE_ENV="development"

# CORS Origins
CORS_ORIGIN="http://localhost:8080,http://localhost:3000,http://localhost:5173"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Socket.IO
SOCKET_CORS_ORIGIN="http://localhost:8080"
