{
  "name": "bikeshop-erp-backend",
  "version": "1.0.0",
  "description": "Backend API para BikeShop ERP Enterprise",
  "main": "dist/server.js",
  "scripts": {
    "dev": "npx tsx watch src/server.ts",
    "dev:simple": "npx tsx src/simple-server.ts",
    "dev:clean": "npx tsx src/simple-server-clean.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "test:api": "node test-api.js",
    "test": "jest --runInBand",
    "test:unit": "jest --testPathIgnorePatterns=integration --runInBand",
    "test:integration": "jest --testPathPatterns=integration --runInBand --detectOpenHandles"
  },
  "prisma": {
    "seed": "tsx src/prisma/seed.ts"
  },
  "keywords": [
    "erp",
    "bikeshop",
    "api",
    "enterprise"
  ],
  "author": "BikeShop ERP Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@types/multer": "^2.0.0",
    "bcryptjs": "^2.4.3",
    "bwip-js": "^4.7.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parse": "^6.0.0",
    "dotenv": "^16.3.1",
    "dotenv-safe": "^9.1.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-slow-down": "^2.1.0",
    "express-validator": "^7.0.1",
    "form-data": "^4.0.4",
    "helmet": "^7.2.0",
    "isomorphic-dompurify": "^2.26.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "node-fetch": "^3.3.2",
    "socket.io": "^4.7.4",
    "xlsx": "^0.18.5",
    "zod": "^4.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/dotenv-safe": "^8.1.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.3",
    "jest": "^30.0.5",
    "nodemon": "^3.0.2",
    "prisma": "^5.7.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  }
}
