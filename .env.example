# ================================
# APPLICATION SETTINGS
# ================================
NODE_ENV=development
PORT=3001
LOG_LEVEL=debug

# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_NAME=bikeshop_db
DATABASE_USER=bikeshop_user
DATABASE_PASSWORD=bikeshop_password
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_URL=postgresql://bikeshop_user:bikeshop_password@localhost:5432/bikeshop_db?schema=public

# ================================
# REDIS CONFIGURATION
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_URL=redis://:redis_password@localhost:6379

# ================================
# JWT CONFIGURATION
# ================================
JWT_SECRET=your-super-secret-jwt-key-for-development-change-in-production-minimum-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-different-from-jwt-secret-minimum-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ================================
# FILE UPLOAD CONFIGURATION
# ================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,application/pdf

# ================================
# CORS CONFIGURATION
# ================================
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,http://localhost:8080

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# DOCKER PORTS
# ================================
FRONTEND_PORT=3000
BACKEND_PORT=3001
DATABASE_PORT=5432
REDIS_PORT=6379
ADMINER_PORT=8080
REDIS_COMMANDER_PORT=8081
REDIS_COMMANDER_PASSWORD=admin

# ================================
# MONITORING
# ================================
ENABLE_METRICS=true
METRICS_PORT=9090

# ================================
# DEVELOPMENT TOOLS
# ================================
ENABLE_SWAGGER=true
ENABLE_DEBUG_LOGS=true
ENABLE_CORS_DEBUG=true
JWT_REFRESH_EXPIRES_IN="7d"

# Admin User Configuration
ADMIN_EMAIL="admin@bikeshop.com"
ADMIN_PASSWORD="SecureAdminP@ssw0rd2025!"
ADMIN_FIRST_NAME="Administrador"
ADMIN_LAST_NAME="Sistema"

# Puerto del servidor
